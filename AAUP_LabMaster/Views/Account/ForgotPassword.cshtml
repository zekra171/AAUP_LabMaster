@model AAUP_LabMaster.EntityDTO.ForgotPasswordDTO

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>Forgot Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen flex flex-col bg-gray-100">

    <main class="flex-grow flex justify-center items-center p-4 relative overflow-hidden">
        <form asp-action="ForgotPassword" method="post" class="bg-white p-6 w-full max-w-sm rounded-sm relative z-10">
            <h2 class="text-center font-extrabold text-lg mb-4">Forgot Password</h2>

            @if (TempData["Message"] != null)
            {
                <div class="bg-green-100 text-green-800 px-4 py-2 rounded mb-3 text-sm text-center">@TempData["Message"]</div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-100 text-red-800 px-4 py-2 rounded mb-3 text-sm text-center">@TempData["ErrorMessage"]</div>
            }

            <input asp-for="FullName" class="w-full mb-3 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-gray-400" placeholder="Full Name" required />
            <span asp-validation-for="FullName" class="text-red-500 text-xs"></span>

            <input asp-for="Email" type="email" class="w-full mb-3 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-gray-400" placeholder="Email" required />
            <span asp-validation-for="Email" class="text-red-500 text-xs"></span>

            <input asp-for="PhoneNumber" type="tel" class="w-full mb-4 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-gray-400" placeholder="Phone Number" required />
            <span asp-validation-for="PhoneNumber" class="text-red-500 text-xs"></span>

            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-3"></div>

            <button class="w-full bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700 transition-colors" type="submit">
                Submit Request
            </button>

            <p class="mt-3 text-sm text-center">
                Back to <a href="/Account/Login" class="text-[#1DA94C] ml-1 underline">Login</a>
            </p>
        </form>
    </main>

</body>
</html>
