@model AAUP_LabMaster.EntityDTO.ResetPasswordDTO

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Reset Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen flex items-center justify-center bg-gray-100">

    <div class="bg-white p-6 rounded shadow w-full max-w-sm">
        <h2 class="text-xl font-bold text-center mb-4">Set New Password</h2>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 text-red-800 px-4 py-2 rounded mb-3 text-sm">@TempData["ErrorMessage"]</div>
        }

        <form asp-action="ResetPassword" method="post">
            <input asp-for="Email" type="hidden" value="@TempData["ResetEmail"]" />

            <input asp-for="NewPassword" type="password" placeholder="New Password"
                   class="w-full mb-3 px-3 py-2 border rounded focus:ring-1 focus:ring-gray-400" required />
            <span asp-validation-for="NewPassword" class="text-red-500 text-xs"></span>

            <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password"
                   class="w-full mb-4 px-3 py-2 border rounded focus:ring-1 focus:ring-gray-400" required />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs"></span>

            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-3"></div>

            <button type="submit"
                    class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 rounded">
                Save New Password
            </button>
        </form>
    </div>
</body>
</html>
