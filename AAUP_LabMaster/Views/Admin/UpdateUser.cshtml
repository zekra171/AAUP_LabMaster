@model AAUP_LabMaster.Models.UserDTO
@{
    ViewData["Title"] = "Edit User";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .form-card {
      box-shadow: 0 4px 20px -2px rgba(0, 0, 0, 0.08);
      transition: all 0.3s ease;
    }
    .form-card:hover {
      box-shadow: 0 8px 25px -5px rgba(0, 0, 0, 0.1);
    }
    .input-focus:focus {
      border-color: #4F46E5;
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.2);
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-800">Edit User</h1>
        <p class="text-gray-600 mt-1">Update user details and permissions</p>
      </div>
      <a href="/Admin/UserManagement" class="text-blue-600 hover:text-blue-800 flex items-center">
        <i class="fas fa-arrow-left mr-2"></i> Back to Users
      </a>
    </div>

    <div class="form-card bg-white rounded-xl p-8 border border-gray-100">
      <form asp-action="UpdateUser" asp-controller="Admin" method="post" class="space-y-6">
        @Html.AntiForgeryToken()

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Personal Info Column -->
          <div>
            <h3 class="text-lg font-semibold text-gray-800 mb-4 pb-2 border-b border-gray-200">Personal Information</h3>
            
            <div class="mb-5">
              <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <i class="fas fa-user text-gray-400"></i>
                </div>
                <input asp-for="FullName" class="input-focus pl-10 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none" />
              </div>
              <span asp-validation-for="FullName" class="text-red-500 text-xs mt-1 block" />
            </div>

            <div class="mb-5">
              <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <i class="fas fa-envelope text-gray-400"></i>
                </div>
                <input asp-for="Email" readonly class="bg-gray-100 pl-10 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none" />
              </div>
              <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block" />
            </div>

            <div class="mb-5">
              <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <i class="fas fa-phone text-gray-400"></i>
                </div>
                <input asp-for="PhoneNumber" class="input-focus pl-10 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none" />
              </div>
              <span asp-validation-for="PhoneNumber" class="text-red-500 text-xs mt-1 block" />
            </div>
          </div>

          <!-- Account Settings Column -->
          <div>
            <h3 class="text-lg font-semibold text-gray-800 mb-4 pb-2 border-b border-gray-200">Account Settings</h3>
            
            <div class="mb-5">
              <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <i class="fas fa-lock text-gray-400"></i>
                </div>
                <input asp-for="Password" type="password" class="input-focus pl-10 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none" />
              </div>
              <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 block" />
            </div>

            <div class="mb-5">
              <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <i class="fas fa-lock text-gray-400"></i>
                </div>
                <input asp-for="ConfirmPassword" type="password" class="input-focus pl-10 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none" />
              </div>
              <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1 block" />
            </div>

            <div class="mb-5">
              <label asp-for="SelectedRoleName" class="block text-sm font-medium text-gray-700 mb-1">User Role</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <i class="fas fa-user-tag text-gray-400"></i>
                </div>
                <select asp-for="SelectedRoleName" class="input-focus pl-10 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none appearance-none">
                  <option value="">-- Select Role --</option>
                  <option>Admin</option>
                  <option>Client</option>
                  <option>Supervisour</option>
                  <option>Guest</option>
                </select>
              </div>
              <span asp-validation-for="SelectedRoleName" class="text-red-500 text-xs mt-1 block" />
            </div>
          </div>
        </div>

        <!-- Additional Fields Row -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="mb-5">
            <label asp-for="Specialist" class="block text-sm font-medium text-gray-700 mb-1">Specialist (Supervisour only)</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-graduation-cap text-gray-400"></i>
              </div>
              <input asp-for="Specialist" class="input-focus pl-10 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none" />
            </div>
            <span asp-validation-for="Specialist" class="text-red-500 text-xs mt-1 block" />
          </div>

          <div class="mb-5">
            <label asp-for="type" class="block text-sm font-medium text-gray-700 mb-1">Client Type</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-users text-gray-400"></i>
              </div>
              <select asp-for="type" class="input-focus pl-10 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none appearance-none">
                <option value="">-- Select Client Type --</option>
                <option value="0">Student</option>
                <option value="1">Researcher</option>
              </select>
            </div>
            <span asp-validation-for="type" class="text-red-500 text-xs mt-1 block" />
          </div>
        </div>

        <div class="flex justify-end pt-4 border-t border-gray-200">
          <button type="submit" class="flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition duration-300 shadow-sm hover:shadow-md">
            <i class="fas fa-save mr-2"></i> Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>

  @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  }
</body>
</html>