@model AAUP_LabMaster.Models.Lab
@{
    ViewData["Title"] = "Delete Lab";
    Layout = "_AdminLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
 
 
<div class="p-6">
<h2 class="text-2xl font-bold mb-4">Delete Lab</h2>
<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
<p>Are you sure you want to delete lab
<strong>@Model.Name</strong>?</p>
</div>
 <form asp-action="DeleteLabConfirmed" method="post">
 @Html.AntiForgeryToken()

   <input type="hidden" asp-for="Id"/>
      <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Yes, Delete</button>
      <a href="/Admin/LabSettings" class="ml-4 text-blue-600 hover:underline">Cancel</a>
 </form>
</div>
</body>
</html>