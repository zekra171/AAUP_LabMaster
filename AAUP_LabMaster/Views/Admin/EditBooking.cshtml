@model AAUP_LabMaster.Models.Booking
@{
    ViewData["Title"] = "Edit Booking";
    Layout = "_AdminLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

<!--Header-->
 
<h2 class="text-2xl font-bold mb-4">Edit Booking</h2>
<form asp-action="EditBooking" method="post">
  <input type="hidden" asp-for="Id"/>
  <label class="block mb-2">Lab Name:</label>
        <input asp-for="Equipment.Lab.Name" class="border px-3 py-2 w-full mb-4" />

  <label class="block mb-2">Date:</label>
  <input  asp-for="Date" type="date" class="border px-3 py-2 w-full mb-4"/>

@* <label class="block mb-2">Time:</label>
  <input  asp-for="" type="text" class="border px-3 py-2 w-full mb-4"/> *@

<label class="block mb-2">Description:</label>
  <input  asp-for="Description" class="border px-3 py-2 w-full mb-4"/>

  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-800">Update</button>
</form>
</body>
</html>