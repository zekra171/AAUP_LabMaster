@{
    ViewData["Title"] = "Book Equipment";
    Layout = "_UserLayout";

    var selectedEquipment = ViewBag.SelectedEquipment as AAUP_LabMaster.Models.Equipment;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>@ViewData["Title"]</title>
</head>
<body class="bg-gray-100 min-h-screen">
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Available Equipment</h2>


<div class="max-w-3xl mx-auto py-10 px-6">
    <div class="bg-white shadow-lg rounded-lg p-8">
        <div class="mb-6 text-center">
            <h2 class="text-3xl font-bold text-gray-800 mb-2">
                <i class="fas fa-calendar-plus text-blue-500 mr-2"></i> Book Equipment
            </h2>
            <p class="text-gray-500">Complete the form below to request booking for lab equipment.</p>
        </div>

        <form asp-action="MakeBook" method="post" class="space-y-6">
            <!-- Equipment Field -->
            <div>
                <label for="Equipment" class="block text-sm font-medium text-gray-700">Equipment</label>
                <input
                    type="text"
                    name="Equipment"
                    id="Equipment"
                    value="@selectedEquipment?.Name"
                    readonly
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-100 text-gray-700 cursor-not-allowed"
                />
            </div>

            <!-- Date/Time Field -->
            <div>
                <label for="date" class="block text-sm font-medium text-gray-700">Select Date & Time</label>
                <input
                    type="datetime-local"
                    name="date"
                    id="date"
                    required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                />
            </div>

            <!-- Note Field -->
            <div>
                <label for="note" class="block text-sm font-medium text-gray-700">Additional Notes</label>
                <textarea
                    name="note"
                    id="note"
                    rows="4"
                    placeholder="Add any special instructions or purpose for this booking..."
                    class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                ></textarea>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button
                    type="submit"
                    class="inline-flex items-center justify-center px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition duration-150"
                >
                    <i class="fas fa-paper-plane mr-2"></i> Confirm Booking
                </button>
            </div>
        </form>
    </div>
</div>

</div>
</body>
</html>
